@model PaginatedDto<BlogPostDto>
@{
    ViewBag.Title = "Index";
}

@if (Model.Items.Count() > 0) { 
    
    foreach (var item in Model.Items) {
        <h1>@item.Title</h1>
    }
    
    @CustomHelpers.Pager(Model)
    
} else {
    
    <div class="alert alert-block">
        @Strings.NoBlogPostsFound
    </div>
}